<%@ val valueOpt: Option[org.shachi.model.ResourceDetails.ResourceMetadataValueDate] = None %>
<div>
  <span>
    <input type="text" size="4" value='${valueOpt.fold("")(_.year)}'>
    <input type="text" size="2" value='${valueOpt.fold("")(_.month)}'>
    <input type="text" size="2" value='${valueOpt.fold("")(_.day)}'>
  </span>
  <input type="text" class="comment" value='${valueOpt.fold("")(_.comment)}'>
</div>
